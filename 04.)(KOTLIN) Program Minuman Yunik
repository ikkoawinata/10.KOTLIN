fun welcome() {
    println("=====================================================")
    println("              SELAMAT DATANG DI PROGRAM              ")
    println("    T O K O  M I N U M A N  Y U N I K  I K K O       ")
    println("                    BAHASA PHP")
    println("=====================================================")
}

fun tabel() {
    println(" No. |\t    DAFTAR MINUMAN \t|  \t HARGA \t    |")
    println("====================================================")
    println(" 1.  | Jus Jeruk                | Rp.         20.000|")
    println(" 2.  | Kopi Janji Jiwa          | Rp.         18.000|")
    println(" 3.  | Mixue Lemon Tea          | Rp.         16.000|")
    println(" 4.  | Es Campur Doger          | Rp.         15.000|")
    println(" 5.  | Milk Shake               | Rp.         13.500|")
    println(" 6.  | Lemon Tea                | Rp.         10.000|")
    println(" 7.  | Capuccino Expresso       | Rp.         10.000|")
    println(" 8.  | Ice Tea                  | Rp.          6.000|")
    println(" 9.  | Air Mineral Unesa        | Rp.          3.500|")
    println("0.   |                    TIDAK JADI                |")
    println("======================================================")
}

fun main() {
    welcome()
    tabel()

    var pilihan = 0
    var hasil1 = 0
    var hasil2 = 0
    var hasil3 = 0
    var hasil4 = 0
    var hasil5 = 0
    var hasil6 = 0
    var hasil7 = 0
    var hasil8 = 0
    var hasil9 = 0
    var total = 0
    var nama = ""
    var satu = ""
    var dua = ""
    var tiga = ""
    var empat = ""
    var lima = ""
    var enam = ""
    var tujuh = ""
    var delapan = ""
    var sembilan = ""
    var j = ' '
    var day = " "
    var customer = " "
    var antrian = ""
    var n = 0

    println("SELAMAT DATANG DI RESTAURANT YUNIK")

    print("Tanggal pesanan [dd/mm/yyyy] : ")
    day = readLine() ?: ""

    print("Silahkan ketik nomor antrian [1-3 digit] : ")
    antrian = readLine() ?: ""

    print("Untuk nama pesanan atas nama siapa : ")
    customer = readLine() ?: ""

    do {
        println("\nSilahkan kakak mau pesan apa [1/2/3/4/5/6/7/8/9/] : ")
        val pilihanStr = readLine()
        val pilihanInt = pilihanStr?.toIntOrNull()
        if (pilihanInt != null) {
            pilihan = pilihanInt
            when (pilihan) {
                1 -> {
                    println(" 1.)----- Jus Jeruk ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Jus_Jeruk] : ")
                    satu = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil1 = n * 20000
                    println(" Total harganya untuk pesanan Jus Jeruk $hasil1 ribu ")
                }
                2 -> {
                    println(" 2.)----- Kopi Janji Jiwa ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Kopi_Janji_Jiwa] : ")
                    dua = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil2 = n * 18000
                    println(" Total harganya untuk pesanan Kopi Janji Jiwa $hasil2 ribu ")
                }
                3 -> {
                    println(" 3.)----- Mixue Lemon Tea ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Mixue_Lemon_Tea] : ")
                    tiga = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil3 = n * 16000
                    println(" Total harganya untuk pesanan Mixue Lemon Tea $hasil3 ribu ")
                }
                4 -> {
                    println(" 4.)------ Es Campur Doger  ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Es_Campur_Doger] : ")
                    empat = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil4 = n * 15000
                    println(" Total harganya untuk pesanan Es Campur Doger $hasil4 ribu ")
                }
                5 -> {
                    println(" 5.)------ Milk Shake ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Milk_Shake] : ")
                    lima = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil5 = n * 13500
                    println(" Total harganya untuk pesanan Milk Shake $hasil5 ribu ")
                }
                6 -> {
                    println(" 6.) ------ Lemon Tea ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Lemon_Tea] : ")
                    enam = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil6 = n * 10000
                    println(" Total harganya untuk pesanan Lemon Tea $hasil6 ribu ")
                }
                7 -> {
                    println(" 7.)------ Cappucino Expresso ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Cappucino_Expresso] : ")
                    tujuh = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil7 = n * 10000
                    println(" Total harganya untuk pesanan Cappucino Expresso $hasil7 ribu ")
                }
                8 -> {
                    println(" 8.)------ Ice Tea ------ ")
                    print("Ketik ulang nama minuman yang dipilih [Ice_Tea] : ")
                    delapan = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil8 = n * 8000
                    println(" Total harganya untuk pesanan Ice Tea $hasil8 ribu ")
                }
                9 -> {
                    println(" 9.)----- Air Mineral Unesa ------- ")
                    print("Ketik ulang nama minuman yang dipilih [Air_Mineral_Unesa] : ")
                    sembilan = readLine() ?: ""
                    print("mau pesan berapa ? : ")
                    val nStr = readLine()
                    val nInt = nStr?.toIntOrNull() ?: 0
                    n = nInt
                    hasil9 = n * 3500
                    println(" Total harganya untuk pesanan Air Mineral Unesa $hasil9 ribu ")
                }
                else -> {
                    println("Pilihan tidak sesuai dengan tabel")
                    break
                }
            }

            total = hasil1 + hasil2 + hasil3 + hasil4 + hasil5 + hasil6 + hasil7 + hasil8 + hasil9
            println("\nAda pesanan lain [Y/N] : ")
            val jStr = readLine()
            j = jStr?.uppercase()?.first() ?: ' '

            println("\nTotal keseluruhan pesanan anda adalah = $total ribu")

        } else {
            println("Input tidak valid. Masukkan angka.")
        }
    } while (j == 'Y')

    println("=================================================================================================")
    println("|                                                                                            |")
    println("|                       R E S T A U R A N T   M I N U M A N   Y U N I K                      |")
    println("|                                   Jalan Sampoerna No. 12 B                                 |")
    println("|                                  Kecamatan Pabean Cantikan                                 |")
    println("|                                      ' 081233075270 '                                      |")
    println("|                                                                                            |")
    println("|================================================================================================|")
    println("|                                                                                            |")
    println("|                                               \t     $day                       |")
    println("|                                                                                            |")
    println("|      Author   : 'IKKO AWINATA'                                                             |")
    println("|      Customer : $customer \t\t\t\t\t\t\t\t |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                          P  E  S  A  N  A  N      N  O  M  O  R                            |")
    println("|                   ____________________________________________________                     |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                            $antrian       \t\t\t\t                |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("|                 SILAHKAN DIAMBIL PESANANNYA SESUAI DENGAN NOMOR ANTRIAN                    |")
    println("|                                                                                            |")
    println("|                                                                                            |")
    println("===============================================================================================|")
    println("|                                                                                            |")
    println(" Pesanan atas nama '$customer' silahkan diambil pesanannya")
}
