package Struct

fun welcome() {
    println("================================================================")
    println("       S E L A M A T  D A T A N G  D I  P R O G R A M")
    println("                 D A T A  S T R U C T")
    println("                     BAHASA KOTLIN")
    println("================================================================")
}

class DataPribadi {//STRUCTNYA BERBENTUK CLASS 
    var nama: String = ""
    var nim: Long = 0
    var JK: String = ""
    var alamat: String = ""
}

fun main() {
    welcome()

    // M NYA ADALAH DATAPRIBADI YG BARU
    val m = DataPribadi().apply {
        nama = " Ikko cahya Awinata "
        nim = 220351204038
        JK = " perempuan "
        alamat = " Jalan Sampoerna No.12 B, Surabaya"
    }

    println("Nama          : " + m.nama)
    println("NIM           : " + m.nim)
    println("Jenis Kelamin : " + m.JK)
    println("Alamat        : " + m.alamat)
}
