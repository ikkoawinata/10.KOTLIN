fun welcome(){
    println("=============================================================");
    println("      S E L A M A T  D A T A N G  DI  P R O G R A M");
    println("               MENCARI NILAI TERBESAR");
    println("                  BAHASA KOTLIN");
    println("=============================================================");
}


fun main(){
    welcome();
    var maks = 0;


    do{
    println("masukkan bilangan ke - 1 : ")
    var a = Integer.valueOf(readLine());
    println("masukkan bilangan ke - 2 : ")
    var b = Integer.valueOf(readLine());
    println("masukkan bilangan ke - 3 : ")
    var c = Integer.valueOf(readLine());


    if ( a > b){
        maks = a
    }else{
        maks = b



    }
    if (c > maks){
        maks = c;
    }
    println("jadi nilai terbesarnya adalah  : " + maks);
    
    println("")
    println("-----------------------------------");
    println("ingin coba program lagi ? [Y/N] : ");
    var j = (readLine());
}while ( j == "Y" || j == "y");//fungsi while ( j == "Y" -> tidak boleh ada spasi, jika ada spasi maka fungsinya tidak berjalan)
println("");
println("Terima kasih telah menggunakan program ini");
println("Made by ikkoc_awinata")
}
